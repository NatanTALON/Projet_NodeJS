<html>
	<head>
		<script>
			function getScore() {
				score = Math.floor(Math.random() * 1000);
				alert(`Vous obtenez : ${score} !`);
				hidden = document.getElementById('score');
				hidden.value = score;
				document.getElementById('form').submit();
			}
		</script>
	</head>
	<body>
		<div>
			<form action="/Random" method="post" id="form">
				<div>Tentez votre chance <%= user.name %> !</div>
				<div>Votre meilleur score est de : <%= user.highscore %></div>
				<div>
					<input type="hidden" name="score" id="score" />
					<button onclick="getScore()">Tirer</button>
				</div>
			</form>
		</div>
		<div>
			<button onclick="location.href='/GameSelection';">Retour au menu</button>
		</div>
	</body>
</html>
