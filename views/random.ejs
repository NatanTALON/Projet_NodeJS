<html>
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<script>
			function getScore() {
				score = Math.floor(Math.random() * 1000);
				alert(`Vous obtenez : ${score} !`);
				hidden = document.getElementById('score');
				hidden.value = score;
				document.getElementById('form').submit();
			}
		</script>
	</head>
	<body>
		<div class="mt-3 ml-3">
			<button class="btn btn-outline-secondary" onclick="location.href='/secure/GameSelection';">Retour au menu</button>
		</div>
		<div class="w-25 mx-auto">
			<form action="" method="post" id="form">
				<div class="text-center mt-5">
    				<h1 class="h3 font-weight-normal">Tentez votre chance <%= login %> !</h1>
    			</div>
				<div class="text-center mb-2">Votre meilleur score est de : <%= highscore %></div>
				<div class="text-center">
					<input type="hidden" name="score" id="score" />
					<button class="btn btn-success btn-lg" onclick="getScore()">Tirer</button>
				</div>
			</form>
		</div>
	</body>
</html>
